<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/layoutTracksFragmentAdapterContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/custom_tracks_adapter_margin_left"
                android:layout_marginRight="@dimen/custom_tracks_adapter_margin_right"
                android:background="@android:color/darker_gray"
                android:paddingBottom="@dimen/custom_tracks_adapter_padding_bottom"
                android:paddingLeft="@dimen/custom_tracks_adapter_padding_left"
                android:paddingRight="@dimen/custom_tracks_adapter_padding_right"
                android:paddingTop="@dimen/custom_tracks_adapter_padding_top"
    >

    <TextView
        android:id="@+id/TrackTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:contentDescription="TrackTitle"
        android:textColor="@android:color/white"
        android:fontFamily="cursive"/>


    <TextView
        android:id="@+id/TrackDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/Play_button"
        android:layout_toRightOf="@+id/TrackTitle"
        android:contentDescription="TrackDuration"
        android:paddingLeft="@dimen/custom_tracks_adapter_TrackDuration_padding_left"
        android:textColor="@android:color/white"
        android:textAlignment="textEnd"
        android:fontFamily="sans-serif"/>

    <ImageButton
        android:id="@+id/Play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/TrackTitle"
        android:layout_alignParentRight="true"
        android:backgroundTint="@color/Red_dark"

        app:srcCompat="@android:drawable/ic_media_play"/>
    <!--android:focusable="false"-->

</RelativeLayout>
